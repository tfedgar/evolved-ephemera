---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  fullWidth?: boolean;
  className?: string;
  textColor?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md', 
  fullWidth = false,
  className = '',
  textColor = ''
} = Astro.props;

// Base classes
const baseClasses = "inline-block font-bold text-center transition-all duration-300 shadow-lg relative transform button-component capitalize";

// Variant classes
const variantClasses = {
  primary: "bg-slate-900 text-white border-2 border-slate-700 hover:border-slate-500 hover:shadow-xl hover:-translate-y-1 relative overflow-hidden group",
  secondary: "bg-slate-900 text-white border-2 border-slate-700 hover:border-slate-500 hover:shadow-xl hover:-translate-y-1 relative overflow-hidden group"
};

// Size classes
const sizeClasses = {
  sm: "px-6 py-3 text-base",
  md: "px-8 py-4 text-lg",
  lg: "px-12 py-6 text-xl"
};

// Width classes
const widthClasses = fullWidth ? "w-full" : "w-auto";

// Combine all classes
const buttonClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${widthClasses} ${textColor} ${className}`;
---

<a href={href} class={buttonClasses}>
  <span class="relative z-10">
    <slot />
  </span>
  <div class="absolute inset-0 bg-gradient-to-r from-emerald-600 to-emerald-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  <div class="absolute -inset-1 bg-gradient-to-r from-emerald-400 to-emerald-300 opacity-0 group-hover:opacity-20 blur-sm transition-opacity duration-300"></div>
</a>
