---
import Layout from '../layouts/Layout.astro';
import LandingHero from '../components/LandingHero.astro';
import AboutCoach from '../components/AboutCoach.astro';
import CoachingServices from '../components/CoachingServices.astro';
import Testimonials from '../components/Testimonials.astro';
import ContactSection from '../components/ContactSection.astro';
---

<Layout>
  <LandingHero />
  <div class="container" style="margin: 2rem auto; display: flex; justify-content: center;">
    <div class="video-wrapper">
      <iframe
        src="https://www.youtube.com/embed/UDcph7re74c"
        title="Coach Edgar Training Philosophy"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        style="max-width: 100%; width: 560px; height: 315px; border-radius: 12px; box-shadow: 0 2px 16px rgba(0,0,0,0.12);"
      ></iframe>
    </div>
  </div>
  <AboutCoach />
  <CoachingServices />
  <Testimonials />
  <ContactSection />
</Layout>
