---
import ResourceHints from '../components/ResourceHints.astro';
import CookieConsent from '../components/CookieConsent.astro';
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  type?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
}

const {
  title = "Edgar Coaching - Expert Training & Performance Optimization",
  description = "Transform your fitness journey with personalized coaching, expert guidance, and proven results. Start your transformation today.",
  canonical = Astro.url.href,
  image = "/images/social-share.jpg",
  type = "website",
  publishedTime,
  modifiedTime,
  author = "Coach Edgar"
} = Astro.props;

// Font files to preload
const fontFiles = [
  {
    url: 'https://fonts.gstatic.com/s/inter/v12/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuLyfAZ9hiA.woff2',
    weight: '400'
  },
  {
    url: 'https://fonts.gstatic.com/s/inter/v12/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuI6fAZ9hiA.woff2',
    weight: '500'
  },
  {
    url: 'https://fonts.gstatic.com/s/inter/v12/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuGKYAZ9hiA.woff2',
    weight: '600'
  }
];
---

<!DOCTYPE html>
<html lang="en" class="font-loading">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#181818" />
    <meta name="color-scheme" content="light" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    
    <ResourceHints />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icon-192x192.png" />
    <link rel="manifest" href="/manifest.json" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="Edgar Coaching" />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {author && <meta property="article:author" content={author} />}
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.url)} />
    <meta name="twitter:site" content="@coachedgar" />
    <meta name="twitter:creator" content="@coachedgar" />
    
    
    <!-- Preload font files -->
    {fontFiles.map(font => (
      <link
        rel="preload"
        href={font.url}
        as="font"
        type="font/woff2"
        crossorigin="anonymous"
        fetchpriority="high"
      />
    ))}

    <!-- Optimize font loading -->
    <script>
      // Preload fonts immediately
      if ("fonts" in document) {
        const fontPromises = [
          document.fonts.load("400 1em Inter"),
          document.fonts.load("500 1em Inter"), 
          document.fonts.load("600 1em Inter")
        ];
        
        Promise.all(fontPromises).then(() => {
          document.documentElement.classList.remove("font-loading");
          document.documentElement.classList.add("font-loaded");
          sessionStorage.setItem("fontsLoaded", "true");
        });
      }

      // Check if fonts were already loaded
      if (sessionStorage.getItem("fontsLoaded")) {
        document.documentElement.classList.remove("font-loading");
        document.documentElement.classList.add("font-loaded");
      }
    </script>

    <!-- Schema.org structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Coach Edgar",
      "jobTitle": "Personal Fitness Coach",
      "description": "Expert personal trainer specializing in performance optimization, body recomposition, and PED risk management",
      "url": "https://coachedgar.com",
      "image": "https://coachedgar.com/images/optimized/coach-425.webp",
      "sameAs": [
        "https://twitter.com/coachedgar",
        "https://instagram.com/coachedgar"
      ],
      "knowsAbout": [
        "Personal Training",
        "Body Recomposition",
        "Performance Optimization",
        "PED Risk Management",
        "Nutrition Coaching",
        "Strength Training"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Coaching Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "3-Month Kickstart Coaching",
              "description": "Build momentum with a full reset of your training, nutrition, recovery, and lifestyle"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "6-Month Rebuild Coaching",
              "description": "Deep results with full support including bloodwork and comprehensive progress tracking"
            }
          }
        ]
      },
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "English"
      }
    })} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <main id="main-content">
      <slot />
    </main>
    <CookieConsent />
  </body>
</html>
